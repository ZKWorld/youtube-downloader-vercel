{
    "version": 2,
    "builds": [
        /* Sirf Python build ko rakhein */
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        /* Root URL ko public/index.html se jor den */
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        /* API Endpoints */
        {
            "src": "/get_formats",
            "dest": "/api/index.py"
        },
        {
            "src": "/download_specific",
            "dest": "/api/index.py"
        },
        /* Baaqi Static Assets */
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}