{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        /* FIX: Root URL (/) ko public/index.html se jorne ke liye */
        {
            "src": "/",          
            "dest": "/public/index.html" 
        },
        /* Baaqi Endpoints */
        {
            "src": "/get_formats",
            "dest": "api/index.py"
        },
        {
            "src": "/download_specific",
            "dest": "api/index.py"
        },
        /* Static Assets (CSS/JS) */
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ]
}